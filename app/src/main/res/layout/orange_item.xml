<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/item_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anderson"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/item_rec"
            app:layout_constraintLeft_toLeftOf="@id/item_rec"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Debit Card"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/item_rec"
            app:layout_constraintRight_toRightOf="@id/item_rec"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2423  3581  9503  2412"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="@id/item_rec"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 / 24"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="@id/item_rec"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Balance"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/item_rec"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_number"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="52dp"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3,100.30"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/item_rec"
            app:layout_constraintTop_toBottomOf="@id/tv_balance"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visa"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/item_rec"
            app:layout_constraintRight_toRightOf="@id/item_rec"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>