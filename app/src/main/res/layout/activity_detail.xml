<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="name"
        app:layout_constraintLeft_toRightOf="@+id/card_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드번호 : "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/edit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="number"
        app:layout_constraintLeft_toRightOf="@+id/card_number"
        app:layout_constraintTop_toBottomOf="@+id/card_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유효기간 : "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="date"
        app:layout_constraintLeft_toRightOf="@+id/card_date"
        app:layout_constraintTop_toBottomOf="@+id/card_number"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/card_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금액 : "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/edit_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="money"
        app:layout_constraintLeft_toRightOf="@+id/card_money"
        app:layout_constraintTop_toBottomOf="@+id/card_date"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>